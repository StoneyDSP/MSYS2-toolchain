{
    // These three directory settings are just for building the test project.
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.buildDirectory": "${workspaceFolder}/usr",
    "cmake.installPrefix": "${workspaceFolder}/usr/local",

    "cmake.generator": "Ninja Multi-Config",
    "cmake.preferredGenerators": [
        "Unix Makefiles",
        "MinGW Makefiles",
        "MSYS Makefiles"
    ],
    "cmake.configureSettings": {
        "CMAKE_MODULE_PATH": "${workspaceFolder}/scripts/cmake/Modules",
    },
    "cmake.configureOnEdit": false,
    "cmake.configureOnOpen": false,
    "cmake.automaticReconfigure": false
}
